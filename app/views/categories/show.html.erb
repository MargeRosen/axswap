<h2><%= title(@category.name, "Categories") %></h2>
<h2><%= @category.name %></h2>
<% admins_only do %>
  <div class ="btn"><%= link_to "Edit Category", edit_category_path(@category) %></div>
  <div class = "btn"><%= link_to "Delete Category",
        category_path(@category),
        :method => :delete,
        :confirm => "Are you sure you want to delete this category?" %></div>
<% end %>
<div class = "btn"><%= link_to "Back to Categories Page", categories_path %></div>

  <ul id='listings'>
  <% @listings.reverse.each do |listing| %>
    <li>
      <%= link_to listing.title, [@category, listing] %>
    </li>
  <% end %>
  <%= link_to "New Listing", new_category_listing_path(@category), class: "btn btn-large" %>
</ul>

