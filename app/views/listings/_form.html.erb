<%= form_for [@category, @listing] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => 6 %>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
   <p>
    <%= f.label :price %><br>
    $<%= f.text_field :price %>
  </p>
   <p>
    <%= f.label :contact %><br>
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label :pics, "Picture link 1" %><br>
    <%= f.text_area :pics, :rows => 3 %>
    <%= f.label :pics2, "Picture link 2" %><br>
    <%= f.text_area :pics2, :rows => 3 %>
    <%= f.label :pics3, "Picture link 3" %><br>
    <%= f.text_area :pics3, :rows => 3 %>
  </p>
  <%= f.submit %>
<% end %>
