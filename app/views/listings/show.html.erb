<div id='listing'>
  <h2><%= title(@category.name, "Categories") %></h2>
  <h2><%= @category.name %></h2>
  <h3><%= @listing.title %></h3>
  <p>Listing created on <%= @listing.created_at.strftime("%B %e, %Y") %><br> The listing will be appear on the site for 7 days after its creation. </p>
  <h4><%= @listing.description %></h4>
    <p> Location: <%= @listing.location  %></p>
    <p> Price: <%= number_to_currency(@listing.price) %></p>
  <% if user_signed_in?%>
    <p> Lister contact: <%= @listing.contact %></p>
  <% else %>
    <p>You must be <%= link_to "signed in", :new_user_session %> to view lister contact information.</p>
  <% end %>
  <% if @listing.pics != "" %>
    <%= link_to "Photo 1", @listing.pics %><br>
  <% end %>
  <% if @listing.pics2 != "" %>
    <%= link_to "Photo 2", @listing.pics2 %><br>
  <% end %>
  <% if @listing.pics3 != "" %>
    <%= link_to "Photo 3", @listing.pics3 %>
  <% end %>

  <h2><%= title(@listing.title, "Listings") %></h2>
  <% cat_return = @category.name %>
  <%= link_to "Back to #{cat_return}", @category %>
  <% if user_signed_in? %>
    <% if current_user.id == @listing.user_id %>
      <%= link_to "Edit Listing", [:edit, @category, @listing] %>
      <%= link_to "Delete Listing", [@category, @listing],
          :method => :delete,
          :confirm => "Are you sure you want to delete this category?" %>
    <% end %>
  <% end %>
</div>
